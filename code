	<script>
		var username = ["d", "e", "f", "a", "u", "l", "t", "u", "s", "e", "r"];
		var password = ["1", "2", "3", "4", "5", "6"];
		function sleep(ms) {
			return new Promise(resolve => setTimeout(resolve, ms));
		}
		async function myFunction() {
			await sleep(500);
			document.getElementById("userName").focus();
			console.log("next");
			await sleep(500);
			document.getElementById("userName").value = "d";
			console.log("next");
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "de";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "def";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defa";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defau";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defaul";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "default";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defaultu";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defaultus";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defaultuse";
			await sleep(500);
			console.log("next");
			document.getElementById("userName").value = "defaultuser";
		}
	</script>
